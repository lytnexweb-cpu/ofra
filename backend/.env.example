TZ=UTC
HOST=0.0.0.0
PORT=3333
LOG_LEVEL=info
APP_KEY=CHANGE_ME_TO_RANDOM_32_CHARS
NODE_ENV=development

DB_CONNECTION=pg
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=ofra_dev

SESSION_DRIVER=cookie

# Brevo SMTP Configuration
# In development, if SMTP credentials are empty, emails are logged to console (stub mode)
# In production, SMTP must be configured for emails to work
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-login@smtp-brevo.com
SMTP_PASSWORD=your-smtp-master-password-here
BREVO_API_KEY=your-api-key-here

# Email sender information
MAIL_FROM_ADDRESS=your-email@example.com
MAIL_FROM_NAME=Your Name

# CORS origins (comma-separated list)
# Example: http://localhost:5173,https://ofra.pages.dev
CORS_ORIGINS=http://localhost:5174

# Redis Configuration (BullMQ)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration (Document uploads)
# AWS_REGION=ca-central-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=ofra-documents

